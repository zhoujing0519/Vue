@import '~common/stylus/variable'

.vote-detail
    position: fixed
    left: 0
    top: 0
    right: 0
    bottom: 0
    background: $color-background
    padding: 15px
    z-index: 999
    .poster
        height: 225px
        text-align: center
        line-height: 225px
        display: table-cell
        img
            vertical-align: middle
            max-width: 100%
            max-height: 100%
    .content
        display: flex
        font-size: $font-size-medium
        color: $color-theme
        font-weight: bold
        padding: 12px 0
        border-bottom: 1px solid
        margin-bottom: 12px
        .num
            flex: 0 0 20px
            width: 20px
        .name
            flex: 1
        .ticket-group
            flex: 0 0 100px
            width: 100px
            text-align: right
    .btn-group
        width: 70%
        margin: 0 auto 15px
        .btn
            margin-bottom: 8px
    .tip-title
        padding: 18px
        text-align: center
        color: $color-text

.slide-enter-active, .slide-leave-active
    transition: .4s
.slide-enter, .slide-leave-to
    transform: translate3d(100%, 0, 0)
